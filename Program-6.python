n = int(input("Enter n Number "))
total = 0
for i in range (n):
  num = float(input(f"Enter number {i + 1} : "))
  total += num
avg = total / n if n > 0 else 0
print(f"Avg of {n} numbers is : {avg}")

n = int(input("Enter n Number "))
total = 0
i = n
while i > 0:
  num = float(input(f"Enter number {n} : "))
  total += num
  i -= 1
avg = total / n if n > 0 else 0
print(f"Avg of {n} numbers is : {avg}")
